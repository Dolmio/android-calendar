<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="fill_parent">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Day number"
            android:id="@+id/dayNumber" android:gravity="center" android:padding="10dp"/>
    <fi.aalto.calendar.app.DayListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dayEventsList"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" android:layout_alignParentEnd="true" android:paddingLeft="10dp"/>
</LinearLayout>