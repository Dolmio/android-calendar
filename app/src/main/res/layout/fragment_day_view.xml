<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context="fi.aalto.calendar.app.DayViewFragment" android:orientation="vertical">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Date" android:gravity="center_horizontal"
            android:id="@+id/dateLabel"/>
    <ListView
            android:layout_width="384dp"
            android:layout_height="wrap_content"
            android:id="@+id/hourList"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" android:layout_alignParentEnd="true"/>

</LinearLayout>
